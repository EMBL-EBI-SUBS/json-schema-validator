            "pcr primers",
            "collection date",
            "geographic location (country and/or sea)",
            "geographic location (latitude)",
            "geographic location (longitude)",
            "environment (biome)",
            "environment (feature)",
            "environment (material)",
            "environmental_sample"
         ]
