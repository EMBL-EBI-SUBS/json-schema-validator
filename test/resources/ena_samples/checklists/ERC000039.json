{
   "$schema" : "http://json-schema.org/draft-07/schema#",
   "description" : "Minimum information about parasite samples. A checklist for reporting metadata of parasite samples associated with molecular data. This standard was developed by the COMPARE platform and can be used for submission of sample metadata derived from protozoan parasites (e.g. Cryptosporidium) and also multicellular eukaryotic parasites (e.g. Platyhelminthes and Nematoda).",
   "author" : "ENA",
   "type" : "object",
   "definitions" : {
      "properties" : {
         "attributes" : {
            "required" : [],
            "description" : "Attributes for describing a sample.",
            "properties" : {},
            "patternProperties" : {
               "^.*$" : {
                  "$ref" : "#/definitions/attribute"
               }
            },
            "type" : "object"
         }
      },
      "attribute" : {
         "minItems" : 1,
         "items" : {
            "properties" : {
               "value" : {
                  "type" : "string",
                  "minLength" : 1
               },
               "terms" : {
                  "$ref" : "#/definitions/terms"
               },
               "units" : {
                  "minLength" : 1,
                  "type" : "string"
               }
            },
            "required" : [
               "value"
            ]
         },
         "type" : "array"
      },
      "terms" : {
         "items" : {
            "type" : "object",
            "properties" : {
               "url" : {
                  "format" : "uri",
                  "type" : "string"
               }
            },
            "required" : [
               "url"
            ]
         },
         "type" : "array"
      }
   },
   "required" : [
      "attributes"
   ],
   "$id" : "ERC000039",
   "properties" : {
      "attributes" : {
         "required" : [
            "dev_stage",
            "geographic location (country and/or sea)",
            "collector name",
            "collecting institution",
            "isolate"
         ],
         "properties" : {
            "diagnostic method" : {
               "description" : "The method or procedure (imaging, genetic or other) performed to determine or confirm the presence of disease in an individual. Examples: microscopy, immunofluorescence, PCR, rapid tests, etc.",
               "items" : {}
            },
            "geographic location (longitude)" : {
               "items" : {
                  "required" : [
                     "units"
                  ],
                  "properties" : {
                     "value" : {
                        "pattern" : "(^.*[+-]?[0-9]+.?[0-9]*.*$)|(^not collected$)|(^not provided$)|(^restricted access$)"
                     }
                  }
               },
               "description" : "The geographical origin of the sample as defined by latitude and longitude. The values should be reported in decimal degrees and in WGS84 system",
               "maxItems" : 1
            },
            "collection date" : {
               "items" : {
                  "properties" : {
                     "value" : {
                        "pattern" : "(^[0-9]{4}(-[0-9]{2}(-[0-9]{2}(T[0-9]{2}:[0-9]{2}(:[0-9]{2})?Z?([+-][0-9]{1,2})?)?)?)?(/[0-9]{4}(-[0-9]{2}(-[0-9]{2}(T[0-9]{2}:[0-9]{2}(:[0-9]{2})?Z?([+-][0-9]{1,2})?)?)?)?)?$)|(^not collected$)|(^not provided$)|(^restricted access$)"
                     }
                  }
               },
               "maxItems" : 1,
               "description" : "The date of sampling, either as an instance (single point in time) or interval. In case no exact time is available, the date/time can be right truncated i.e. all of these are valid ISO8601 compliant times: 2008-01-23T19:23:10+00:00; 2008-01-23T19:23:10; 2008-01-23; 2008-01; 2008."
            },
            "collector name" : {
               "description" : "Name of the person who collected the specimen. Example: John Smith",
               "maxItems" : 1,
               "items" : {}
            },
            "isolate" : {
               "maxItems" : 1,
               "description" : "individual isolate from which the sample was obtained",
               "items" : {}
            },
            "subject exposure" : {
               "items" : {},
               "maxItems" : 1,
               "description" : "Exposure of the subject to infected human or animals, such as poultry, wild bird or swine. If multiple exposures are applicable, please state them separated by semicolon. Example: poultry; wild bird"
            },
