               "^.*$" : {
                  "$ref" : "#/definitions/attribute"
               }
            },
            "description" : "Attributes for describing a sample.",
            "required" : []
         }
      },
      "attribute" : {
         "items" : {
            "properties" : {
               "units" : {
                  "minLength" : 1,
                  "type" : "string"
               },
               "terms" : {
                  "$ref" : "#/definitions/terms"
               },
               "value" : {
                  "type" : "string",
                  "minLength" : 1
               }
            },
            "required" : [
               "value"
            ]
         },
